<div class="details__container">
  <%= form_with model: user do |f| %>
    <div class="task-tools small">
      <div class="left">
        <a href="<%= user_path(user.username) %>" title="Cancel editing" class="no-underline">
          Cancel
        </a>
      </div>

      <div class="right">
        <%= link_to 'HTML Mode', toggle_details_mode_user_path(user.username), data: { turbo: false } %>
        <%= f.submit 'Save' %>
      </div>
    </div>

    <%= f.text_area :details %>
  <% end %>
</div>